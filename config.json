{
  // 页头配置：用于 capsule-render 的 header 部分
  "header": {
    "text": "👋 Hi, I'm BlueSeagull", // 页头标题
    "desc": "Welcome to my GitHub" // 页头描述
  },
  // 自我介绍配置：显示在 README 的 intro 部分
  "intro": {
    "text": "🚀 喜欢写代码、读书、折腾新技术" // 介绍文字
  },
  // 页脚配置：用于 capsule-render 的 footer 部分
  "footer": {
    "text": "", // 页脚标题（可留空）
    "desc": "" // 页脚描述（可留空）
  },
  // 渐变配置：控制 capsule-render 和 github-readme-stats 的渐变效果
  "gradient": {
    // 颜色池：HEX 格式颜色列表，用户可自定义，若为空使用默认颜色
    "colors": [
      "#A3BFFA", // 浅紫蓝
      "#AED9E0", // 湖蓝
      "#B9E4C9", // 薄荷绿
      "#C1E1C1", // 淡绿
      "#D4F1F4", // 水蓝
      "#E0F7FA", // 浅青
      "#F8C8DC", // 樱花粉
      "#F5E1E6", // 淡粉
      "#FAD2CF", // 蜜桃粉
      "#E6E6FA", // 薰衣草紫
      "#F0E4D7", // 米白
      "#D8D8F0"  // 淡紫
    ],
    // 渐变颜色个数：2-5，默认 5
    "count": 5,
    // 饱和度调整：0.5-2.0，默认 1.0（不变），<0.5 或 >2.0 使用默认值
    "saturation": 1.0,
    // 刷新频率：支持 "HH:MM"（如 "24:30"）、"daily"、"weekly"、"monthly"
    // 需手动更新 Random-color.yml 的 cron 表达式
    "schedule": "24:30"
  }
}
